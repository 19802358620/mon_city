    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>重置密码-梧州市产业信息服务平台</title>
    <link href="/Areas/WebSite/Styles/html/default/login2/css/globa.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/Areas/WebSite/Styles/html/default/login2/css/guide.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/Areas/WebSite/Styles/jiaoben4242/src/jquery.skidder.css" rel="stylesheet" >
    <style>
            .inde {
                margin-left: auto;margin-right: auto;margin-top: 30px;margin-bottom: 30px;width: 660px;
            }
            .inde li {
                text-align: center;
                max-width: 200px;
                float: left;
                margin-right: 40px;
            }
            .inde span {
                font-family: 微软雅黑;
                font-weight: 900;
                color: gray;
            }
        </style>
</head>
<body style="min-width: 1300px;">
    <div class="g_header">
	    <div class="g-logo clr">
    	    <div class="g-logo-left"><img src="/Areas/WebSite/Styles/html/default/login2/images/g_logo.png"/></div>
        </div>
    </div>
    <div class="g_ad">
         <div class="slideshow" style="height: 424px; margin-top:15px; overflow: hidden;">
              <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_1.jpg"></div>
	          <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_2.jpg"></div>
	          <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_3.jpg"></div>
	          <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_4.jpg"></div>
              <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_5.jpg"></div>
              <div class="slide"><img src="/Areas/WebSite/Styles/html/default/login2/images/guid_6.jpg"></div>
        </div>
        <div class="g-ad-m" style="position: absolute; top: 50px; right: 50px; width: auto; height: auto; z-index: 10000000">
            <div class="g_load">
                <h3>重置密码</h3>
                <div class="load-d">
                    <ul style="padding-bottom: 5px;">
                        <li id="login-form-error" style="color: white"></li>
                    </ul>
                    <ul class="clr">
                        <li class="load-title"><i><img src="/Areas/WebSite/Styles/html/default/login2/images/g_pe.png" width="17" height="18" /></i></li>
                        <li><input name="Password" id="Password" type="password" placeholder="新密码" /></li>
                    </ul>
                    <ul class="clr">
                        <li class="load-title"><i><img src="/Areas/WebSite/Styles/html/default/login2/images/g_mi.png" width="17" height="18" /></i></li>
                        <li><input name="Password2" id="Password2" type="password" placeholder="确认新密码" /></li>
                    </ul>
                    <ul class="load-submit">
                        <li id="login_loading" onclick="settingPwd()">确　定</li>
                    </ul>
                </div>
            </div>
        </div>
    
    </div>
    <div class="inde">
        <ul class="clr">
            <li style="display: none">
                    <a href="/WebSite/Company/Index?cid={0}" target="_blank"><img src="{1}"  /></a><br/>
                    <a href="/WebSite/Company/Index?cid={0}" target="_blank" style="margin-top: 7px;display: inline-block"><span>{2}</span></a>
            </li>
        </ul>
    </div>
    <div class="foot-a clr">
        <div class="foot-con-t text-center">
            <p>COPYRIGHT 福建中烟工业有限责任公司知识服务平台 ALL RIGHTS RESE</p>
            <p>地址：南宁华侨投资区武侨路５８号嘉园阁１楼１２８号房 服务热线：0771--6303032</p>
        </div>
    </div>

    <script src="/Areas/WebSite/Scripts/jquery.min.js"></script>
    <script src="/Areas/WebSite/Scripts/layer/layer.js" type="text/javascript"></script>
    <script src="/Areas/Base/Scripts/Metronicv/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Areas/Base/Scripts/Metronicv/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Areas/Base/Scripts/Metronicv/assets/global/plugins/icheck/icheck.min.js"></script>
    <script src="/Areas/WebSite/Styles/jiaoben4242/js/imagesloaded.js"></script>
    <script src="/Areas/WebSite/Styles/jiaoben4242/js/smartresize.js"></script>
    <script src="/Areas/WebSite/Styles/jiaoben4242/src/jquery.skidder.js"></script>
    <script src="/Areas/WebSite/Scripts/common.js"></script>
    <script>
        //产业信息
        $.ajax({
            async: true,
            type: "POST",
            dataType: "json",
            data: { Page: 1, PageSize: 999, sortBy: 'Name', sortOrder: 'asc', DataType: "industry" },
            url: "/Manager/Company/Pager",
            success: function (data) {
                var tem = $(".inde ul.clr li:first").prop("outerHTML");
                $(data.Rows).each(function (i, r) {
                    $(".inde ul.clr").append($(tem.format(r.Id, r.Picture, r.Name)).show());
                });
            }
        });

        //图片轮播
        $('.slideshow').each(function () {
            var $slideshow = $(this);
            $slideshow.imagesLoaded(function () {
                $slideshow.skidder({
                    slideClass: '.slide',
                    animationType: 'css',
                    scaleSlides: true,
                    maxWidth: 3500,
                    paging: true,
                    autoPaging: true,
                    pagingWrapper: ".skidder-pager",
                    pagingElement: ".skidder-pager-dot",
                    swiping: true,
                    leftaligned: false,
                    cycle: true,
                    jumpback: false,
                    speed: 400,
                    autoplay: true,
                    autoplayResume: true,
                    interval: 4000,
                    transition: "slide",
                    afterSliding: function () { },
                    afterInit: function () { }
                });
            });
        });

        //重置密码
        function settingPwd() {
            var account = $getQueryString("n");
            var model = {
                Account: account,
                Password: $("#Password").val(),
                Password2: $("#Password2").val()
            }
            $.ajax({
                async: true,
                type: "POST",
                dataType: "json",
                data: model,
                url: "/WebSite/User/SettingPwd?token=" + $getQueryString("token"),
                beforeSend: function () {
                    $("#login_loading").html("确　定 <img src=\"/Areas/Manager/Images/loading_1.gif\" />");
                },
                success: function (data) {
                    $("#login_loading").html("确　定");
                    if (data.Type == "Error") {
                        $("#login-form-error").html(data.Content);
                        return false;
                    }
                    $("#login-form-error").html("");
                    alert(data.Content);
                    window.location.href = "/WebSite/User/Login";
                    return true;
                },
                error: function (e) {
                    $("#login-form-error").html("网络异常，请稍后重试！");
                }
            });
        }
    </script>
</body>
</html>
