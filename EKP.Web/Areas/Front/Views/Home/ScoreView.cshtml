<form action="#" id="edit-form" class="form-horizontal" novalidate="novalidate">
    <div class="form-body">
        <div class="form-group">
            <div class="float-left" style="width: 45%">
                <input type="text" class="form-control hide" name="Id">
            </div>
            <div class="float-left" style="width: 55%">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            <span class="required" aria-required="true"></span>答案附件
                        </label>
                        <div class="col-md-8">
                            <span>
                                <a id="AttachmentName" name="AttachmentName" class="form-control" style="border:none;"></a>
                            </span>
                            
                        </div>
                    </div>
                </div>
            </div>

            <div id="wujizhiscore" class="float-left" style="width: 40%">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            <span class="required" aria-required="true"></span>成绩
                        </label>
                        <div class="col-md-10">
                            <select name="Score" class="form-control">
                                <option value="A" selected="selected">A</option>
                                <option value="B" >B</option>
                                <option value="C" >C</option>
                                <option value="D" >D</option>
                                <option value="E" >E</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div id="baifenzhiscore" class="float-left" style="width: 45%">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-4">
                            <span class="required" aria-required="true"></span>分数
                        </label>
                        <div class="col-md-8">
                            <input id="Score" type="text" name="Score" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="float-left" style="width: 90%">
            <div class="form-group">

                <div class="container" style="width:100%">

                    <div class="row">
                        <div class="col-md-12"><h4>答案：</h4></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="Answer"></div>
                        </div>
                    </div>

                </div>
