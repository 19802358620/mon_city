                            <select name="ScoreDegree" class="form-control">
                                <option value="百分制" selected="selected">百分制</option>
                                <option value="五级制">五级制</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="float-left" style="width: 45%">

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-4">
