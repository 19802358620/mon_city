                        </label>
                        <div class="col-md-8">
                            <input type="text" name="ClassId" data-required="1" class="form-control">
                        </div>
                    </div>
                </div>
            </div>

            <div class="float-left" style="width: 90%">

                <div class="form-group">
                    <label class="control-label col-md-2">
                        <span class="required" aria-required="true"></span>要求
                    </label>
                    <div class="col-md-10">
                        <input class="kindeditor form-control" name="create.Request" style="height:100px;width:200px;" />
                    </div>
                </div>

            </div>

        </div>

    </div>
</form>

<script>
        //初始化

    $(function () {
        //初始化插件
        KeHelper.create('.kindeditor');
        $("#create-form select").select2();
        $("#create-form input[name='ClassId']").select2({
            placeholder: "-请选择-",
            allowClear: true,
            formatSelection: function (item) { return item.Name; },
            formatResult: function (item) { return item.Name; },
            closeOnSelect: true,
            multiple: true,
            ajax: {
                url: getUrl("Class", "Pager", { area: "Adm" }),
                dataType: "json",
                type: 'post',
                data: function (term, page) {
                    return {
                        PageSize: 999,
                        SortBy: "Id",
                        SortOrder: "asc"
                    };
                },
                results: function (data, page) {
                    var items = data.Rows;
                    var more = (page * 30) < data.TotalRecords;
                    $(items).each(function (i, item) {
                        item.id = item.Id.toString();
                        item.Name = item.Name;
                    });
                    if (page == 1) {
                        items.unshift({ id: "", Name: "-请选择-" });
                    }
                    return { results: items, more: more };
                }
            }
        });
        
        $("#create-form input[name='UserId']").select2({
            placeholder: "-请选择-",
            allowClear: true,
            formatSelection: function (item) { return item.Name; },
            formatResult: function (item) { return item.Name; },
            ajax: {
                url: getUrl("User", "TeacherPager"),
                postData: { RoleId: 137 },
                dataType: "json",
                type: 'post',
                data: function (term, page) {
                    return {
                        PageSize: 999,
                        SortBy: "Id",
                        SortOrder: "asc"
                    };
                },
                results: function (data, page) {
                    var items = data.Rows;
                    var more = (page * 30) < data.TotalRecords;
                    $(items).each(function (i, item) {
                        item.id = item.Id.toString();
                        item.Name = item.RealName;
                    });
                    if (page == 1) {
                        items.unshift({ id: "", Name: "-请选择-" });
                    }
                    return { results: items, more: more };
                }
            }
        });

        //表单验证
        $('#create-form').formValidation({
            verbose: false,
            fields: {
                "create.Name": {
                    validators: {
                        notEmpty: {
                            message: '作业名称不能为空.'
                        }
                    }
                }
            }
        });
    });

    // 年月日 时分秒
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minuteStep: 1,//分钟间隔为1
        maxView: 4, //最高显示到年份
        minView: 0, //最低显示到日
        forceParse: 0,
        format: 'yyyy-mm-dd hh:ii:ss'
    });


    var editor = KindEditor.editor({
        uploadJson: '/Areas/Base/Scripts/kindeditor-4.1.10/asp.net/upload_json.ashx',
        fileManagerJson: '/Areas/Base/Scripts/kindeditor-4.1.10/asp.net/file_manager_json.ashx',
        allowFileManager: true
    });
    KindEditor('#AttachmentID').click(function () {
        editor.loadPlugin('insertfile', function () {
            editor.plugin.fileDialog({
                fileUrl: KindEditor('input[name="Attachment"]').val(),
                clickFn: function (url, title) {
                    KindEditor('input[name="Attachment"]').val(url);
                    $("input[name='Attachment']").val(url);
                    $.ajax({
                        type: "POST",
                        url: "/Homework/Create",
                        data: { url: url },
                        success: function (data) {
                            editor.hideDialog();
                            $("input[name='AttachmentName']").val(title);
                            //$("#grid").datagrid('reload');
                        }
                    });
                }
            });
        });
    });

